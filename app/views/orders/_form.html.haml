%h3 Datos del Cliente

.form-inline.row
  .form-group.col-md-5
    = f.label :client_name, "Nombre de Cliente"
    = f.text_field :client_name, class: "form-control"
  .form-group.col-md-5.col-md-pull-1
    = f.label :client_code, "CÃ³digo de Cliente"
    = f.text_field :client_code, class: "form-control"

%hr

%h3 Productos
%table.table
  %thead
    %tr
      %th Codigo
      %th Descripcion
      %th Precio
      %th Venta minima
      %th Cantidad
      - unless f.object.new_record?
        %th Eliminar
  %tbody
    = f.fields_for :items do |ff|
      - product = ff.object.product
      %tr
        %td= product.code
        %td= product.description
        %td= product.price
        %td= product.minimum_sale
        %td= ff.number_field :quantity, class: "form-control"
        - if ff.object.quantity.present?
          %td= ff.check_box :_destroy
        = ff.hidden_field :product_id, value: product.id


